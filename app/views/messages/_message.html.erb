<div data-message-styling-target="message" data-user-id="<%= message.user_id %>" style="display: flex; margin-bottom: 4px;">
  <div id="<%= dom_id message %>" class="message-bubble" style="padding: 8px; border-radius: 4px; max-width: 70%;">
    <strong><%= message.user.username %></strong>
    <small><%= message.created_at.strftime("%H:%M:%S") %></small>
    <br>
    <%= message.content %>
  </div>
</div>
