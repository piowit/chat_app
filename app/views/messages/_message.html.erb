<% mine = message.user_id == @current_user&.id %>
<div style="display: flex; justify-content: <%= mine ? 'flex-end' : 'flex-start' %>; margin-bottom: 4px;">
  <div id="<%= dom_id message %>" style="padding: 8px; background: <%= mine ? '#d4edda' : '#e2e3e5' %>; border-radius: 4px; max-width: 70%;">
    <strong><%= message.user.username %></strong>
    <small><%= message.created_at.strftime("%H:%M:%S") %></small>
    <br>
    <%= message.content %>
  </div>
</div>
